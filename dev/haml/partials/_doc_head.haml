%head

  %meta{:charset => "utf-8"}
  %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge"}

  - strPageTitle = "Admin Page Builder"

  - if locals != ""
    %title #{strPageTitle} | #{locals}
  - else
    %title #{strPageTitle}

  - if locals == "Error 404"
    - strDescription = "You have encountered a catastrophic error. Please evacuate the internet. Thank you."
  - else
    - strDescription = "This is a tool that is great. Use it."

  %meta{:name => "robots", :content => "noindex, nofollow"}

  %meta{:name => "description", :content => "#{strDescription}"}
  %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, shrink-to-fit=no"}
  %meta{:name => "format-detection", :content => "telephone=no"}
  %meta{:name => "apple-mobile-web-app-capable", :content => "yes"}
  %meta{:name => "apple-mobile-web-app-status-bar-style", :content => "black"}

  %link{:rel => "stylesheet", :href => "assets/css/styles.min.css"}
